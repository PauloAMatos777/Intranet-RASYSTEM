    private void txtSenhaKeyPressed(java.awt.event.KeyEvent evt) {                                    
        // A linha abaixo serve para que quando pressione entre na tela principal sem precisar clicar no login
        if (evt.getKeyCode() == KeyEvent.VK_ENTER) {
            logar();
        }
    }                                   

    private void txtUsuarioKeyPressed(java.awt.event.KeyEvent evt) {                                      
        // a linha abaixo serve para entrar com enter como no campo da senha mas corrigi um bug caso erre o usuario e volte
        //para campo de digitar usuario com senha preenchida, também entrara com enter
        if (evt.getKeyCode() == KeyEvent.VK_ENTER) {
            logar();
        }
    }                                     

