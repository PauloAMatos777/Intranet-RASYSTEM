//declarando 3 variaveis especiais conexao,pst e rs; Todas atribuo o valor null pq não estou usando o banco de dados no momento.
//conexao foi a variavel criada para armazenar dados
public class TELALOGIN extends javax.swing.JFrame {

    Connection conexao = null;
    PreparedStatement pst = null; //mais um framework necesario para manipular bancos SQL
    ResultSet rs = null; //exibe o resultado das operaçoes sql executadas

//abaixo criaremos metódo (void) 'logar'
//as linhas abaixo associam o login com os campos de texto login e senha
    public void logar() {
        String sql = "select * from tbusuarios where login=? and senha=?"; //esta linha após o from seleciona a tabela aonde voce quer buscar os dados.
        try {
            //as linhas abaixo prepara a consulta ao banco de dados em função 
            //do que foi digitado nas caixas de texto. O ? é substituido pelo conteudo das variáveis
            pst = conexao.prepareStatement(sql);
            pst.setString(1, txtUsuario.getText());
            String Captura = new String(txtSenha.getPassword()); //essa linha aumenta a segurança da captura da senha
            pst.setString(2, Captura);
            //a linha abaixo executa query(consulta ao banco), essa query
            //corresponde ao select descrito acima na variavel String sql
            rs = pst.executeQuery();
            //se existir usuario e senha corresponde
            if (rs.next()) {
                //a linha obtêm o conteúdo do campo perfil da tabela tbusuarios (obtêm através de uma string)
                //a linha abaixo exibe o conteúdo do campo de tabela
                String perfil = rs.getString(6);
                //System.out.println(perfil); //essa linha serve para ele exibir o conteúdo dessa 
                //a estrutura abaixo faz o tratamento do perfil do usuário (verifica se ele é "admin ou user"
                //nesse if só vai logar o "admin"
                if (perfil.equals("admin")) {
                    TelaPrincipal principal = new TelaPrincipal();
                    principal.setVisible(true);
                    TelaPrincipal.menRelt.setEnabled(true);
                    TelaPrincipal.menCadUsu.setEnabled(true);
                    TelaPrincipal.lblUsuario.setText(rs.getString(2)); //essa linha serve para mostrar qual user ta logado na label
                    TelaPrincipal.lblUsuario.setForeground(Color.black);//essa linha serve para mostrar o id do usuário em vermelho para sinalizar que ele tem acesso "admin"
                    this.dispose();//essa linha fecha a telaLogin quando abrir a telaPrincipal(boas práticas de programação)
                    conexao.close();//boas práticas também,essa linha fecha a conexão com banco de dados
                } else { //esse else serve para o perfil do tipo "user" logar
                    TelaPrincipal principal = new TelaPrincipal();
                    principal.setVisible(true);
                    TelaPrincipal.lblUsuario.setText(rs.getString(2)); //essa linha serve para mostrar qual user ta logado na label
                    TelaPrincipal.lblUsuario.setForeground(Color.gray);//essa linha serve para mostrar o id do usuário em cinza para sinalizar que ele tem acesso restrito "user"
                    this.dispose();
                    conexao.close();
                }
            } else {
                JOptionPane.showMessageDialog(null, "usuario e/ou senha inválidos");
            }

        } catch (Exception e) {
            JOptionPane.showMessageDialog(null, e);
        }
    }
    //* Creates new form TELALOGIN

    public TELALOGIN() {
        initComponents();
        //a linha abaixo importa o modulo de conexao como banco (imprescindivel)
        conexao = Moduloconexao.conector();
        System.out.println("conexao");
        if (conexao != null) {
            lblstatus.setIcon(new javax.swing.ImageIcon(getClass().getResource("/br/com/infox/icones/dbok.png"))); //linha para endereçar o icone desejado
        } else {
            lblstatus.setIcon(new javax.swing.ImageIcon(getClass().getResource("/br/com/infox/icones/dberror.png")));
        }
    }

