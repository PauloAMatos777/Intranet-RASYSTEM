    private void menCadUsuActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // as linhas abaixos vão abrir o form TelaUsuario dentro do desktop pane
        TelaUsuario usuario = new TelaUsuario();
        usuario.setVisible(true);
        desktop.add(usuario);//chama pela tela desktop
    }                                         

    private void MenReltServActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // gerando um relatório de clientes
        int confirma = JOptionPane.showConfirmDialog(null, "Confirma a impressão deste relatório?","Atenção",JOptionPane.YES_NO_OPTION);
        if (confirma == JOptionPane.YES_NO_OPTION){
            //imprimindo relatório com o framework JasperReports
            try {
                //Usando a classe JasperPrint para preparar a impressão de um relatório
                JasperPrint print = JasperFillManager.fillReport("C:/reports/servicos.jasper",null,conexao);
                //a linha abaixo exibe o relatório através da classe JasperViewer
                JasperViewer.viewReport(print,false);
            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e);
            }
        }
    }                                           

    private void menAjuSobActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // a linha abaixo trata o evento da tela sobre (desenvolvedor e versão do programa)
        TelaSobre sobre = new TelaSobre();
        sobre.setVisible(true);
    }                                         

    private void formWindowActivated(java.awt.event.WindowEvent evt) {                                     
        // as linhas abaixos substituem a label lbldata pela data atual do sistema
        Date data = new Date();
        DateFormat formatador = DateFormat.getDateInstance(DateFormat.SHORT); //essa linha add uma biblioteca que formata a data em so o dia mes e ano, sem hora e segundos.
        lblData.setText(formatador.format(data));
    }                                    

    private void menSairActionPerformed(java.awt.event.ActionEvent evt) {                                        
        //exibe uma caixa de dialogo ao clicar em sair
        int sair = JOptionPane.showConfirmDialog(null, "Tem certeza que deseja sair?", "Atenção", JOptionPane.YES_NO_CANCEL_OPTION);
        // a linha abaixo linka a opção sair do programa ao codigo para fechar a tela
        if (sair == JOptionPane.YES_OPTION) {
            System.exit(0);
        }
    }                                       

    private void mencadCliActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        //Chamando tela cliente
        TelaCliente cliente = new TelaCliente();
        cliente.setVisible(true);
        desktop.add(cliente);
    }                                         

    private void menCadOmActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // Chamando a tela OM
        TelaOM om=new TelaOM();
        om.setVisible(true);
        desktop.add(om);
    
    }                                        

    private void menRelCliActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // gerando um relatório de clientes
        int confirma = JOptionPane.showConfirmDialog(null, "Confirma a impressão deste relatório?","Atenção",JOptionPane.YES_NO_OPTION);
        if (confirma == JOptionPane.YES_NO_OPTION){
            //imprimindo relatório com o framework JasperReports
            try {
                //Usando a classe JasperPrint para preparar a impressão de um relatório
                JasperPrint print = JasperFillManager.fillReport("C:/reports/clientes.jasper",null,conexao);
                //a linha abaixo exibe o relatório através da classe JasperViewer
                JasperViewer.viewReport(print,false);
            } catch (Exception e) {
                JOptionPane.showMessageDialog(null, e);
            }
        }
    }                                         

